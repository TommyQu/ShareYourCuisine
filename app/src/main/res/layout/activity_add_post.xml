<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".NewPostActivity">

    <TextView
        android:id="@+id/post_content_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/post_content_text"/>

    <EditText
        android:id="@+id/post_content_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post_content_view"
        android:ems="10"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post_content_value"
        android:text="@string/submit_btn"
        android:id="@+id/button"/>

    <Button
        android:id="@+id/submit_btn"
        style="@style/SubmitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post_content_value"
        android:text="@string/submit_btn"/>

    <Button
        android:id="@+id/cancel_btn"
        style="@style/CancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post_content_value"
        android:layout_toRightOf="@+id/submit_btn"
        android:layout_marginLeft="20dp"
        android:text="@string/cancel_btn"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/postImageView1"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp"
        android:adjustViewBounds="true"
        android:maxHeight="60dp"
        android:maxWidth="60dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/postImageView2"
        android:layout_alignTop="@+id/postImageView1"
        android:layout_toRightOf="@+id/postImageView1"
        android:layout_toEndOf="@+id/postImageView1"
        android:adjustViewBounds="true"
        android:maxHeight="60dp"
        android:maxWidth="60dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/postImageView3"
        android:layout_alignTop="@+id/postImageView2"
        android:layout_toRightOf="@+id/postImageView2"
        android:layout_toEndOf="@+id/postImageView2"
        android:adjustViewBounds="true"
        android:maxHeight="60dp"
        android:maxWidth="60dp"/>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/addImageButton"
        android:layout_alignTop="@+id/postImageView3"
        android:layout_toRightOf="@+id/postImageView3"
        android:layout_toEndOf="@+id/postImageView3"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:background="@drawable/add_img_btn"/>

</RelativeLayout>