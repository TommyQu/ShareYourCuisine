<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@color/white"
        tools:context=".NewActivityActivity">
        <TextView
            android:id="@+id/activity_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_title_text"/>

        <EditText
            android:id="@+id/activity_title_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_title_text"
            android:ems="10"/>

        <TextView
            android:id="@+id/activity_address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_title_value"
            android:layout_marginTop="20dp"
            android:text="@string/activity_address_text"/>

        <EditText
            android:id="@+id/activity_address_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_address_text"
            android:ems="10"/>

        <TextView
            android:id="@+id/activity_start_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_address_value"
            android:layout_marginTop="20dp"
            android:text="@string/activity_start_time"/>

        <DatePicker
            android:id="@+id/activity_start_date_picker"
            android:calendarViewShown="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:layout_below="@+id/activity_address_value"
            android:layout_alignLeft="@+id/activity_start_time_text">
        </DatePicker>

        <TimePicker
            android:id="@+id/activity_start_time_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:layout_below="@+id/activity_address_value"
            android:layout_toRightOf="@+id/activity_start_date_picker">

        </TimePicker>
    </RelativeLayout>
</ScrollView>