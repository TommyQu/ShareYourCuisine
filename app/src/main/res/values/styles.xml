<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--<item name="android:actionBarStyle">@style/SycActionBar</item>-->
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="DrawerItem">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>


    <!-- Global styles-->
    <style name="SubmitBtn">
        <item name="android:background">@color/green</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="CancelBtn">
        <item name="android:background">@color/red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Main Activity style-->
    <style name="MainTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Profile Activity style-->
    <style name="ProfileTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="ProfileNum">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Menu styles-->
    <style name="MenuRowTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SingleMenuTitle">
        <item name="android:fontFamily">@string/sans_serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
    </style>
    <style name="SingleMenuContent">
        <item name="android:fontFamily">@string/sans_serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Activity styles-->
    <style name="ActivityRowTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SingleActivityTitle">
        <item name="android:fontFamily">@string/sans_serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="SingleActivityUserName">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SingleActivityAddress">
        <item name="android:fontFamily">@string/sans_serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="SingleActivityTime">
        <item name="android:fontFamily">@string/sans_serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SingleActivityContent">
        <item name="android:fontFamily">@string/sans_serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>


    <!-- -->
</resources>
